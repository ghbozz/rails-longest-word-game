<div class="container text-center" id="letters-container">
  <h2><%= session[:points] %></h2>
  <ul class="list-inline">
     <% @letters.each do |letter| %>
        <li> <div class="letter"> <%= letter %> </div></li>
     <% end %>
  </ul>

  <form action="/games/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="answer">
    <input type="submit" value="Play" class="btn btn-primary">
  </form>
</div>

